{
    "name": "spell-checker/spell-checker",
    "type": "library",
    "description": "Multi-language code and text spell checker in PHP",
    "homepage": "http://github.com/spell-checker/spell-checker",
    "license": ["BSD-3-Clause"],
    "authors": [
        {
            "name": "Vlasta Neubauer",
            "homepage": "http://www.paranoiq.cz"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "nette/neon": "~2.4",
        "nette/utils": "~2.4",
        "nikic/php-parser": "~3.0|~4.0",
        "symfony/finder": "~3.4|~4.0",
        "tracy/tracy": "~2.4"
    },
    "require-dev": {
        "consistence/coding-standard": "2.2.1",
        "jakub-onderka/php-console-highlighter": "~0.3",
        "jakub-onderka/php-parallel-lint": "~0.9",
        "nette/tester": "~2.0",
        "phing/phing": "~2.16",
        "phpstan/phpstan": "0.9.2",
        "slevomat/coding-standard": "4.0.0",
        "spell-checker/dictionary-en": "~0.1",
        "squizlabs/php_codesniffer": "3.1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "classmap": ["src", "tests"]
    },
    "bin": [
        "spell-checker"
    ]
}
